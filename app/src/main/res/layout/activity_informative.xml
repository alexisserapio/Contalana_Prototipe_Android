<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/informative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a.ui.InformativeActivity"
    android:background="@color/backgroundColor">

    <ImageView
        android:id="@+id/ivMockup"
        android:layout_width="500dp"
        android:layout_height="420dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mockup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12500" />

    <TextView
        android:id="@+id/topLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:hint="@string/infoPoster.title.one"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivMockup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/bottomLabel"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:hint="@string/welcome.sublabel"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/topLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Indicadores de pÃ¡gina (dots) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="120dp"
        app:cardBackgroundColor="@color/CL_darkGreen"
        app:strokeColor="@color/CL_darkGreen"
        app:cardCornerRadius="12dp">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:tabIconTint="@null"
            app:tabIndicatorColor="@color/CL_darkGreen"
            android:background="@android:color/transparent"
            app:tabRippleColor="@color/CL_darkGreen"/>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/informativeButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/infoPoster.button"
        android:textSize="18sp"
        app:cornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/CL_darkBlue"
        android:textColor="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>