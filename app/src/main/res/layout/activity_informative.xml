<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/informative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a.informativeActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:animateLayoutChanges="true"/>

    <!-- Indicadores de pÃ¡gina (dots) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="120dp"
        app:cardBackgroundColor="@color/CL_darkGreen"
        app:strokeColor="@color/CL_darkGreen"
        app:cardCornerRadius="12dp">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:tabIconTint="@null"
            app:tabIndicatorColor="@color/CL_darkGreen"
            android:background="@android:color/transparent"
            app:tabRippleColor="@color/CL_darkGreen"/>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/informativeButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/infoPoster.button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/CL_darkBlue"/>

</androidx.constraintlayout.widget.ConstraintLayout>